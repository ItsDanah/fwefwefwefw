package project212;

// A generic singly linked list implementation
public class LinkedList<T> {

    private Node<T> head;    // First node in the list
    private Node<T> current; // Current node used for iteration
    private int size;        // Number of elements in the list

    //---- Constructor ----//
    public LinkedList() {
        head = current = null;
        size = 0;
    }

    //---- Check if list is empty ----//
    public boolean empty() {
        return head == null;
    }

    //---- Check if current node is the last ----//
    public boolean last() {
        if(current == null) return true; // FIX: prevent NullPointerException
        return current.next == null;
    }

    //---- Find first element ----//
    public void findFirst() {
        current = head;
    }

    //---- Move to next element ----//
    public void findNext() {
        if(current != null) current = current.next; // FIX: prevent NullPointerException
    }

    //---- Retrieve data at current node ----//
    public T retrieve() {
        if(current != null) return current.data;
        return null;
    }

    //---- Update data at current node ----//
    public void update(T e) {
        if(current != null) current.data = e;
    }

    //---- Insert after current node ----//
    public void insert(T e) {
        Node<T> tmp;
        if (empty()) {
            current = head = new Node<T>(e);
        } else {
            tmp = current.next;
            current.next = new Node<T>(e);
            current = current.next;
            current.next = tmp;
        }
        size++;
    }

    //---- Remove current node ----//
    public void remove() {
        if(empty() || current == null) return; // FIX: prevent errors if empty

        if (current == head) {
            head = head.next;
        } else {
            Node<T> tmp = head;
            while (tmp.next != current)
                tmp = tmp.next;
            tmp.next = current.next;
        }

        if (current.next == null)
            current = head;
        else
            current = current.next;

        size--;
    }

    //---- Get number of elements ----//
    public int getSize() {
        return size;
    }

    //---- Convert list to string for printing ----//
    public String toString() {
        String text = "";
        if (empty()) return text;
        findFirst();
        while (!last()) {
            text += current.data + "\n";
            findNext();
        }
        text += current.data + "\n";
        findFirst();
        return text;
    }
}
